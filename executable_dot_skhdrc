# Apps
f18 + cmd - o : osascript -e 'tell application "Terminal" to do script "cd \"/Users/philipnickel/Library/Mobile Documents/iCloud~md~obsidian/Documents\""'
# ralt + cmd - o : osascript -e 'display notification "skhd triggered!" with title "Test"'
f18 + cmd - c : open -na "Google Chrome" --args --new-window

# Window Navigation (using right command)
rcmd - h : yabai -m window --focus west
rcmd - j : yabai -m window --focus south  
rcmd - k : yabai -m window --focus north
rcmd - l : yabai -m window --focus east

# Window Resizing
f19 - h : yabai -m window --resize left:-50:0
f19 - l : yabai -m window --resize right:50:0
f19 - k : yabai -m window --resize top:0:-50
f19 - j : yabai -m window --resize bottom:0:50

# Window Management
cmd - return : yabai -m window --toggle zoom-fullscreen
rcmd + shift - h : yabai -m window --warp west
rcmd + shift - j : yabai -m window --warp south
rcmd + shift - k : yabai -m window --warp north
rcmd + shift - l : yabai -m window --warp east
rcmd + shift - t : yabai -m window --toggle titlebar

# Workspaces
f18 - 1 : yabai -m space --focus 1
f18 - 2 : yabai -m space --focus 2
f18 - 3 : yabai -m space --focus 3
f18 - 4 : yabai -m space --focus 4
f18 - 5 : yabai -m space --focus 5

f18 + shift - 1 : yabai -m window --space 1 && yabai -m space --focus 1
f18 + shift - 2 : yabai -m window --space 2 && yabai -m space --focus 2
f18 + shift - 3 : yabai -m window --space 3 && yabai -m space --focus 3
f18 + shift - 4 : yabai -m window --space 4 && yabai -m space --focus 4
f18 + shift - 5 : yabai -m window --space 5 && yabai -m space --focus 5

# System Control
f20 - y : yabai --restart-service
f20 - z : skhd --restart-service
